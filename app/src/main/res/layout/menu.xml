<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout02"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@android:color/holo_orange_dark">
	
<RelativeLayout
	android:id="@+id/RelativeLayout01"
	android:layout_width="wrap_content"
	android:layout_height="20dp">
</RelativeLayout>

<RelativeLayout
	android:id="@+id/RelativeLayout02"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<ImageView
		android:id="@+id/ImageView01"
		android:layout_width="wrap_content"
		android:background="@drawable/buscaminas"
		android:layout_height="80dp"
		android:layout_marginTop="20dp">
	</ImageView>
</RelativeLayout>


<RelativeLayout
        android:id="@+id/RelativeLayout03"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/Button01"
            android:text="@string/op1"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </Button>


        <Button
            android:id="@+id/Button04"
            android:text="@string/op4"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:textColor="#696969"
            android:focusable="false"
            android:layout_below="@+id/Button01"
            android:layout_alignStart="@+id/Button01">
        </Button>

        <Button
            android:id="@+id/Button02"
            android:text="@string/op2"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:focusable="false"
            android:layout_below="@+id/Button04"
            android:layout_alignStart="@+id/Button04">
        </Button>

        <Button
            android:id="@+id/Button03"
            android:text="@string/op3"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:textStyle="bold"
			android:layout_below="@+id/Button02"
			android:layout_alignStart="@+id/Button02">
        </Button>
</RelativeLayout>


	<RelativeLayout
	android:id="@+id/RelativeLayout04"
	android:layout_width="wrap_content"
	android:layout_height="50dp">
</RelativeLayout>

<RelativeLayout
	android:id="@+id/RelativeLayout05"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		android:id="@+id/TextView01"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:text="@string/report">
	</TextView>

	<ImageView
		android:id="@+id/ImageView02"
		android:background="@drawable/iconogmail"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_height="75dp"
		android:layout_width="75dp"
		android:cropToPadding="false"
		android:layout_marginTop="25dp">
	</ImageView>

</RelativeLayout>


</LinearLayout>